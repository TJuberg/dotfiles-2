  name = Sendy Halim
  email = sendyhalim93@gmail.com

[core]
  editor = vim
  excludesfile = ~/.gitignore

[color]
  ui = true

[color "branch"]
  current = blue
  local = yellow
  remote = green

[color "diff"]
  meta = yellow
  frag = magenta
  old = 102
  new = 39

[color "status"]
  added = green
  changed = cyan
  untracked = yellow

[difftool "sourcetree"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path =

[mergetool "sourcetree"]
  cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
  trustExitCode = true

[alias]
  a    = add
  b    = branch
  bm   = branch --move
  c    = commit -m
  ca   = commit -am
  cam  = commit --amend
  co   = checkout
  cob  = checkout -b
  com  = checkout master
  d    = diff
  dc   = diff --cached
  l    = log --oneline --decorate --color --graph
  lg   = log --stat --max-count=10
  lgg  = log --graph --max-count=10
  lgga = log --graph --decorate --all
  lo   = log --oneline --decorate --color
  p    = push
  po   = push origin
  pom  = push origin master
  pl   = pull
  rb   = rebase
  rbm  = rebase master
  s    = status
  ss   = status -s
  st   = stash
  standup = log --author="sendyhalim93@gmail.com" --oneline --since="yesterday" --all
